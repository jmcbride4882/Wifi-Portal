{
  "name": "lslt-wifi-portal",
  "version": "1.0.0",
  "description": "LSLT WiFi Loyalty & Captive Portal Suite for Raspberry Pi",
  "main": "backend/server.js",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "concurrently \"npm run server\" \"npm run client\" \"npm run python-services\"",
    "server": "nodemon backend/server.js",
    "client": "cd frontend && npm start",
    "python-services": "python3 python-services/main.py",
    "build": "cd frontend && npm run build",
    "install-all": "npm install && cd frontend && npm install",
    "setup-db": "node backend/scripts/setup-database.js",
    "test": "jest",
    "installer": "sudo bash scripts/raspberry-pi-installer.sh"
  },
  "keywords": [
    "wifi",
    "captive-portal",
    "loyalty",
    "raspberry-pi",
    "unifi",
    "voucher",
    "printing"
  ],
  "author": "LSLT Systems",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "sqlite3": "^5.1.6",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "rate-limiter-flexible": "^3.0.8",
    "nodemailer": "^6.9.7",
    "qrcode": "^1.5.3",
    "jsbarcode": "^3.11.5",
    "moment": "^2.29.4",
    "axios": "^1.6.2",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.6",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "node-cron": "^3.0.2",
    "express-validator": "^7.0.1",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5",
    "csv-writer": "^1.6.0",
    "pdf-lib": "^1.17.1",
    "crypto": "^1.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "@types/jest": "^29.5.8"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jmcbride4882/Wifi-Portal.git"
  }
}